{
    "id": "org.leocad.LeoCAD",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "leocad",
    "rename-icon": "leocad",
    "rename-desktop-file": "leocad.desktop",
    "rename-appdata-file": "leocad.appdata.xml",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=x11",
        "--filesystem=home",
        "--env=TMPDIR=/var/tmp",
        "--env=QT_ENABLE_HIGHDPI_SCALING=1"
    ],
    "modules": [
        {
            "name": "leocad",
            "buildsystem": "qmake",
            "config-opts": [
                "LDRAW_LIBRARY_PATH=/app/share/leocad",
                "DISABLE_UPDATE_CHECK=1",
                "INSTALL_PREFIX=/app"
            ],
            "sources": [
		{
		    "type": "git",
		    "url": "https://github.com/leozide/leocad.git",
		    "tag": "v19.07.1",
		    "commit": "6c7291b919a9128518c682a706fb53399feb6f81"
                },
                {
                    "type": "patch",
                    "path": "appdata.patch"
                },
                {
                    "type": "archive",
                    "url": "https://github.com/leozide/leocad/releases/download/v19.07.1/Library-Linux-14384.zip",
                    "sha256": "6bec1e45b464545fab866fcf7842d7e659521d418d7e7391f5f5cf574a4bd4e8"
                }
            ],
            "post-install": [
                "mkdir -p /app/share/icons/hicolor/scalable/apps",
                "cp /app/share/icons/hicolor/scalable/mimetypes/application-vnd.leocad.svg /app/share/icons/hicolor/scalable/apps/leocad.svg",
                "install -D library.bin ${FLATPAK_DEST}/share/leocad/library.bin"
            ]
        }
    ]
}
