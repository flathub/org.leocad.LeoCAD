{
    "id": "org.leocad.LeoCAD",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "leocad",
    "rename-icon": "leocad",
    "rename-desktop-file": "leocad.desktop",
    "rename-appdata-file": "leocad.appdata.xml",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=x11",
        "--filesystem=home",
        "--env=TMPDIR=/var/tmp",
        "--env=QT_ENABLE_HIGHDPI_SCALING=1"
    ],
    "modules": [
        {
            "name": "povray",
            "buildsystem": "simple",
            "build-commands": [
                "cd unix && ./prebuild.sh",
                "./configure COMPILED_BY=https://flathub.org --prefix=${FLATPAK_DEST} --with-boost-libdir=${FLATPAK_DEST}/lib",
                "make",
                "make install"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/POV-Ray/povray.git",
                    "tag": "v3.7.0.8",
                    "commit": "908900d9c9634f609d2cd0aed35cbb3f7c07d36c"
                },
                {
                    "type": "patch",
                    "path": "patches/povray/0002-Autotool-massaging.patch"
                },
                {
                    "type": "patch",
                    "path": "patches/povray/0003-Remove-povuser.patch"
                }
            ],
            "modules": [
                {
                    "name" : "boost",
                    "buildsystem" : "simple",
                    "cleanup" : [
                        "/include",
                        "/lib/libboost_*.a"
                    ],
                    "build-commands" : [
                        "./bootstrap.sh --prefix=${FLATPAK_DEST} --with-libraries=date_time,thread",
                        "./b2 install variant=release link=shared runtime-link=shared --prefix=/app -j $FLATPAK_BUILDER_N_JOBS"
                    ],
                    "sources" : [
                        {
                            "type" : "archive",
                            "url" : "https://downloads.sourceforge.net/project/boost/boost/1.68.0/boost_1_68_0.tar.bz2",
                            "sha256" : "7f6130bc3cf65f56a618888ce9d5ea704fa10b462be126ad053e80e553d6d8b7"
                        }
                    ]
                }
            ]
        },
        {
            "name": "leocad",
            "buildsystem": "qmake",
            "config-opts": [
                "LDRAW_LIBRARY_PATH=/app/share/leocad",
                "DISABLE_UPDATE_CHECK=1",
                "INSTALL_PREFIX=/app"
            ],
            "sources": [
		{
		    "type": "git",
		    "url": "https://github.com/leozide/leocad.git",
		    "tag": "v21.01",
		    "commit": "8f30690ee22ba265defc1409d289547e060f911e"
                },
                {
                    "type": "patch",
                    "path": "patches/appdata.patch"
                },
                {
                    "type": "patch",
                    "path": "patches/gl-fixes.patch"
                },
                {
                    "type": "patch",
                    "path": "patches/gl-fixes2.patch"
                },
                {
                    "type": "patch",
                    "path": "patches/leocad-issue-610.patch"
                },
                {
                    "type": "patch",
                    "path": "patches/leocad-povray-path.patch"
                },
                {
                    "type": "archive",
                    "url": "https://github.com/leozide/leocad/releases/download/v21.01/Library-20.03.zip",
                    "sha256": "88d6d28b3a494a15ae63e984c1e732e28362fabc2e145ffab828fed2eb5e3632"
                }
            ],
            "post-install": [
                "mkdir -p /app/share/icons/hicolor/scalable/apps",
                "cp /app/share/icons/hicolor/scalable/mimetypes/application-vnd.leocad.svg /app/share/icons/hicolor/scalable/apps/leocad.svg",
                "install -D library.bin ${FLATPAK_DEST}/share/leocad/library.bin"
            ]
        }
    ]
}
